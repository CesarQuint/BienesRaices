extends ../layout/index
block contenido
    div(class="py-10")
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2(class="text-center text-2xl font-bold")=pagina

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form.space-y-5
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="nombre") Tu Nombre
                        input(id="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Nombre" type="text" name="nombre")
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="email") Tu Email
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Email" type="text" name="email")
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="password") Tu Password
                        input(id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Password" type="password" name="password")
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-3 font-bold" for="repetir_password") Repite tu Password
                        input(id="repetir_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repite tu Password" type="password" name="repetir_password")
                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/login") Â¿Ya tienes cuenta? Inicia Sesion 
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password 

                    input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")